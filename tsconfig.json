{
  "compilerOptions": {
    "typeRoots": ["@types", "node_modules/@types"],
    "module": "commonjs",
    "outDir": "dist",
    "target": "es2019",
    "esModuleInterop": true,
    "rootDirs": ["src", "tests"],
    "baseUrl": "src",
    "paths": {
      "@/tests/*": [
        "../tests/*"
      ],
      "@/*": ["*"]
    }
  },
  "include": [
    "src",
    "tests"
  ]
}
